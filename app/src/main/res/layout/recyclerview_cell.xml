<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycleview_cell"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@color/colorWhite">

    <ImageButton
        android:id="@+id/imageButton_recycler"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_margin="10dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="France"
        android:textColor="@color/colorblack"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="Europe > "
        android:textColor="@color/colorblack"
        app:layout_constraintStart_toEndOf="@+id/imageButton_recycler"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginEnd="10dip"
        android:text="00/00/00"
        android:textColor="@color/colorblack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resume_recycler"
        android:layout_width="305dip"
        android:layout_height="40dip"
        android:layout_marginTop="20dip"
        android:text="blablablablablablablablablablablablalbablablablabla"
        android:textColor="@color/colorblack"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton_recycler"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>